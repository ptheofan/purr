{
  "compilerOptions": {
    "paths": {
      "@purr/backend/*": ["backend/src/*"],
      "@purr/client/*": ["client/src/*"],
    }
  },
  "exclude": [
    "backend/node_modules/**",
    "backend/dist/**",
    "client/node_modules/**",
  ],
  "references": [
    {
      "path": "backend"
    },
    {
      "path": "client"
    },
  ],
}
