# Recreated .env template - Please fill in your actual values
# Copy this to .env and update with your real credentials

# Basic server configuration
PORT=3000
HOST=http://localhost

# Put.io API credentials - GET THESE FROM https://app.put.io/oauth
PUTIO_CLIENT_ID=YOUR_CLIENT_ID_HERE
PUTIO_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE
PUTIO_AUTH=YOUR_AUTH_TOKEN_HERE

# Enable watching and scanning paths for uploads
WATCHER_ENABLED=true
# Watch dirs - Format: /path/to/dir:putio_item_id;/path/to/dir:putio_item_id
WATCHER_TARGETS=YOUR_WATCH_PATH:YOUR_PUTIO_FOLDER_ID

# Enable downloading files from put.io automatically
DOWNLOADER_ENABLED=true
# Download dirs - Format: /path/to/dir:putio_item_id;/path/to/dir:putio_item_id
DOWNLOADER_TARGETS=YOUR_DOWNLOAD_PATH:YOUR_PUTIO_FOLDER_ID

# Put.io integration settings
PUTIO_ENABLE_SOCKET=true
PUTIO_ENABLE_WEBHOOKS=false
PUTIO_CHECK_CRON_SCHEDULE="*/60 * * * * *"
PUTIO_CHECK_AT_STARTUP=true

# Performance settings
UI_PROGRESS_UPDATE_INTERVAL=333
CONCURRENT_GROUPS=2
CONCURRENT_SMALL_FILES=8
CONCURRENT_LARGE_FILES=2
DOWNLOADER_CHUNK_SIZE=8388608

# Performance monitoring
DOWNLOADER_PERFORMANCE_MONITORING_ENABLED=true
DOWNLOADER_PERFORMANCE_MONITORING_TIME=10
DOWNLOADER_PERFORMANCE_MONITORING_SPEED=

# Security settings
DOWNLOADER_ARBITRARY_DOWNLOADS_ENABLED=false
DOWNLOADER_ARBITRARY_DOWNLOADS_ROOT_FOLDER=/mnt