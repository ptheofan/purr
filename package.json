{
    "name": "@purr/monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "backend",
        "client"
    ],
    "scripts": {
        "backend": "npm -w backend run start:dev",
        "backend:debug": "npm -w backend run start:debug",
        "client": "npm -w client run dev",
        "build": "npm -w backend run build && npm -w client run build",
        "lint": "npm -w backend run lint --if-present && npm -w client run lint --if-present",
        "version": "./scripts/show-version.sh",
        "release": "./scripts/create-release.sh"
    },
    "dependencies": {
        "graphql-scalars": "^1.24.1",
        "json-bigint-patch": "^0.0.8"
    }
}
