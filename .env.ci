# Minimal environment configuration for CI/CD environments
# This file provides the bare minimum environment variables needed
# to start the backend server for GraphQL schema generation during builds

# Required Put.io API credentials (dummy values for CI)
PUTIO_CLIENT_ID=1234
PUTIO_AUTH=dummy_auth
PUTIO_CLIENT_SECRET=dummy_secret

# Disable features that require real API credentials or external resources
WATCHER_ENABLED=false
DOWNLOADER_ENABLED=false
PUTIO_ENABLE_SOCKET=false
PUTIO_CHECK_AT_STARTUP=false
PUTIO_ENABLE_WEBHOOKS=false

# Basic server configuration (uses defaults if not specified)
PORT=3000
HOST=http://localhost

# Minimal console logging for CI
CONSOLE_LOG_LEVELS=error,warn

# Performance settings (conservative defaults for CI)
CONCURRENT_GROUPS=1
CONCURRENT_SMALL_FILES=2
CONCURRENT_LARGE_FILES=1
DOWNLOADER_PERFORMANCE_MONITORING_ENABLED=false

# Disable arbitrary downloads for security
DOWNLOADER_ARBITRARY_DOWNLOADS_ENABLED=false
DOWNLOADER_ARBITRARY_DOWNLOADS_RESTRICT_PATHS=true